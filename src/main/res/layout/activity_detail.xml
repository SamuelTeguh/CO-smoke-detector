<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_data">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dateDetail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Text"
            android:textColor="#ffffffff"
            android:textSize="32dp"
            android:paddingLeft="30dp"
            android:layout_marginTop="40dp"
            android:textStyle="bold" />



            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/textview_design"
                ></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/coDetail"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Text"
                android:textColor="#ffffffff"
                android:layout_marginLeft="30dp"
                android:paddingRight="25dp"
                android:paddingLeft="20dp"
                android:background="@drawable/textview_design"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/smokeDetail"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Text"
                android:paddingLeft="25dp"
                android:textColor="#ffffffff"
                android:background="@drawable/textview_design"
                android:layout_marginRight="30dp"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
        <TextView
            android:id="@+id/timeDetail"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Text"
            android:textColor="#ffffffff"
            android:textSize="20dp"
            android:background="@drawable/textview_design"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonActivation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Activate Sensor"
        android:textColor="#000000"
        android:background="@drawable/activate_button_design"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</android.support.constraint.ConstraintLayout>